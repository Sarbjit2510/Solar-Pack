<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".mActivity.ReportActivity">

    <include layout="@layout/app_new_layout" />

    <WebView
        android:id="@+id/webView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="5dp">

        <Button
            android:id="@+id/submit_installation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:background="@color/colorAccent"
            android:drawableLeft="@drawable/ic_local_see_black_24dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/submit_installation_report"
            android:textColor="#ffffff"
            android:textSize="12sp" />

        <Button
            android:id="@+id/view_installation"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
            android:background="@color/colorPrimaryDark"
            android:drawableLeft="@drawable/ic_visibility_black_24dp"
            android:gravity="center"
            android:padding="5dp"
            android:text="@string/view_installation_report"
            android:textColor="#ffffff"
            android:textSize="12sp" />


    </LinearLayout>

</LinearLayout>
