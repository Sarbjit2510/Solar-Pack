                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:id="@+id/milestoneStatus"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/site_engineer"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:id="@+id/user_name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/user_mobile"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:id="@+id/user_mobile"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/remark_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:text="@string/site_engineer_remarks"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="14sp" />

                <com.pragyaware.anu.solarpack.mUtil.TextViewRegular
                    android:id="@+id/remark"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:padding="5dp"
                    android:textColor="@color/colorAccent"
                    android:textSize="14sp" />

            </LinearLayout>





            <LinearLayout
                android:id="@+id/project_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:visibility="gone">


